<% if flash[:notice].present? %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<%= form_with model: @pessoa do |form|  %>
  <%= form.label :nome %>
  <%= form.text_field :nome %>

  <%= form.label :cpf %>
  <%= form.text_field :cpf %>

  <%= form.label :valor_da_carteira %>
  <%= form.text_field :valor_da_carteira %>

  <%= form.submit "Criar", class:"btn btn-success"%>
<% end %>
<%= link_to "Cancelar", root_path, class:"btn btn-danger"%>